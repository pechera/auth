<html>
  <head>
    <title>Reset password</title>
    <link href="css/login.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div class="main">
      <h2>Reset password</h2>
      <form method="POST" action="/password">
        <p>
          <input
            class="field"
            type="password"
            placeholder="password"
            name="password"
          />
        </p>
        <p>
          <input
            class="field"
            type="password"
            placeholder="password"
            name="newpassword"
          />
        </p>
        <button class="button" type="submit">Submit</button>
      </form>
    </div>
  </body>
</html>
