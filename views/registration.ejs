<html>
  <head>
    <title>Registration</title>
    <link href="css/registration.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div class="main">
      <h2>Registration</h2>
      <form method="POST" action="/registration">
        <p>
          <input type="text" class="field" placeholder="name" name="name" />
        </p>
        <p>
          <input
            type="text"
            class="field"
            placeholder="username"
            name="username"
          />
        </p>
        <p>
          <input type="text" class="field" placeholder="email" name="email" />
        </p>
        <p>
          <input
            type="password"
            class="field"
            placeholder="password"
            name="password"
          />
        </p>
        <div class="svg">
          <p>
            <input
              type="text"
              class="field"
              placeholder="captcha"
              name="captcha"
            />
          </p>
          <p><%- image.data %></p>
        </div>
        <button class="button" class="button" type="submit">
          Registration
        </button>
      </form>
      <p>
        <span class="link">Have an account? </span><a href="/login">Login</a>
      </p>
    </div>
  </body>
</html>
